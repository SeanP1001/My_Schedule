body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    background-color: #9fa69f;
}

h1 {
    text-align: center;
    margin-top: 20px;
}

table {
    width: 80%;
	border: 4px solid #ddd;
    margin: 20px auto;
    border-collapse: collapse;
}

th, td {
    border: 2px solid #ddd;
    padding: 10px;
    text-align: center;
}

th {
    background-color: #4CAF50;
    color: white;
}

tr:nth-child(even) {
    background-color: #f2f2f2;
}

td:nth-child(odd) {
	font-weight: bold;
    background-color: #f9ffbc;
}

td:nth-child(even) {
    background-color: #bcfff9;
}
